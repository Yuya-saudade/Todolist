<head>
  <title>タスク一覧 || Todolist</title>
</head>

<main>
  <div class="main tasks-index">
    <div class="container">
      <div class="index-head" >
        すべてのタスク
      </div>
      <% @tasks.each do |task| %>
        <div class="tasks-index-item">
          <ul class="far-ul">
            <li class="far-li">
              <i class="far fa-circle"></i>  <%= link_to(task.content, "/tasks/#{task.id}", class: "content") %>
            </li>
          </ul>
        </div>
        <div id="container">
          <div id="tasks-show-item">
            <div class="tasks-index-item">
              <ul class="far-ul">
                <li class="far-li">
                  <i class="far fa-circle"></i>  <%= task.content %>
                  <p><%= task.created_at %></p>
                </li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="task-new">
        <label for="label1"><i class="fas fa-plus fa-fw plus-in-index"></i> タスクを追加</label>
        <input type="checkbox" id="label1" class="checkbox">
        <div class="hidden_show">
          <%= form_tag("/tasks/create") do %>
            <input required maxlength='100' name="content" class="task-input">
            <p><input type="submit" value="追加" class="add-btn"></p>
          <% end %>
        </div>
    </div>
  </div>
</main>
