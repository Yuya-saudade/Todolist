<head>
  <title>タスク一覧 || Todolist</title>
</head>

<main>
  <div class="main tasks-index">
    <div class="container">
      <div class="index-head" >
        すべてのタスク
      </div>
      <% @tasks.each do |task| %>
        <div class="tasks-index">
          <div class="tasks-index-item">
            <ul class="far-ul">
              <li class="far-li">
                <i class="far fa-circle circle"></i>
                <i class="fas fa-check check"></i>
                <%= task.content %>
                <div class="task-show">
                  <div class="hidden_show1">
                    <p>追加日：<%= task.created_at.to_s(:datetime_jp) %></p>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="task-new">
        <label for="label4"><i class="fas fa-plus fa-fw plus-in-index"></i> タスクを追加</label>
        <input type="checkbox" id="label4" class="checkbox">
        <div class="hidden_show2">
          <%= form_tag("/tasks/create") do %>
            <input required maxlength='100' name="content" class="task-input">
            <p><input type="submit" value="追加" class="add-btn"></p>
          <% end %>
        </div>
    </div>
  </div>
</main>
