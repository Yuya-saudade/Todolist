<main>
  <div class="main tasks-index">
    <div class="container">
      <div class="index-head" >
        すべてのタスク
      </div>
      <% @tasks.each do |task| %>
        <div class="tasks-index-item">
          <ul class="far-ul">
            <li class="far-li"><i class="far fa-circle"></i><%= link_to(@task.content, "/task/#{task.id}/show") %></li>
          </ul>
        </div>
      <% end %>
      <div class="task-new">
        <label for="label1"><i class="fas fa-plus fa-fw plus-in-index"></i> タスクを追加</label>
        <div class="hidden_show">
      	  <input type="text" name="" value="">
          <input type="submit" value="追加">
        </div>
      </div>
    </div>
  </div>
</main>
